<Page x:Class="Cookbook_Database.Windows.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookbook_Database.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="Search" Background="White" Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="RecipePanel" >
                <StackPanel.Background>
                    <ImageBrush x:Name="RecipeImage"/>
                </StackPanel.Background>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
